<?xml version="1.0"?>
<robot name="pippino" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:property name="base_width" value="0.28"/>
  <xacro:property name="base_length" value="0.30"/>
  <xacro:property name="base_height" value="0.06"/>

  <xacro:property name="total_width" value="0.28"/>
  <xacro:property name="total_length" value="0.30"/>
  <xacro:property name="total_height" value="0.22"/>
  

  <xacro:property name="wheel_radius" value="0.034"/>
  <xacro:property name="wheel_width" value="0.028"/>
  <xacro:property name="wheel_xoff" value="0.08"/>

  <material name="Rust">
    <color rgba="0.36 0.13 0.03 1.0"/>
  </material>
  <material name="Green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>
  <material name="Aluminum">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>
  <material name="Blue">
    <color rgba="0.0 0.0 0.4 1.0"/>
  </material>
  <material name="Plastic">
    <color rgba="0.01 0.01 0.1 1.0"/>
  </material>

 <!-- Define some commonly used intertial properties  -->
  <xacro:macro name="box_inertia" params="m w h d">
    <inertial>
      <origin xyz="0 0 0" rpy="${pi/2} 0 ${pi/2}"/>      
      <mass value="${m}"/>
      <inertia ixx="${(m/12) * (h*h + d*d)}" ixy="0.0" ixz="0.0" iyy="${(m/12) * (w*w + d*d)}" iyz="0.0" izz="${(m/12) * (w*w + h*h)}"/>
    </inertial>
  </xacro:macro>

  <xacro:macro name="cylinder_inertia" params="m r h">
    <inertial>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0" />      
      <mass value="${m}"/>
      <inertia ixx="${(m/12) * (3*r*r + h*h)}" ixy = "0" ixz = "0" iyy="${(m/12) * (3*r*r + h*h)}" iyz = "0" izz="${(m/2) * (r*r)}"/> 
    </inertial>
  </xacro:macro>

  <xacro:macro name="sphere_inertia" params="m r">
    <inertial>
      <mass value="${m}"/>
      <inertia ixx="${(2/5) * m * (r*r)}" ixy="0.0" ixz="0.0" iyy="${(2/5) * m * (r*r)}" iyz="0.0" izz="${(2/5) * m * (r*r)}"/>
    </inertial>
  </xacro:macro>

  <!-- Base visual -->
  <xacro:macro name="base_box" params="l w x y">
    <visual>
      <origin xyz="${x} ${y} ${0.01}" rpy="0 0 0"/>
      <geometry>
        <box size="${l} ${w} 0.002"/>
      </geometry>
      <material name="Rust"/>
    </visual>
    <visual>
      <origin xyz="${x} ${y} ${base_height+0.01}" rpy="0 0 0"/>
      <geometry>
        <box size="${l} ${w} 0.002"/>
      </geometry>
      <material name="Rust"/>
    </visual>
  </xacro:macro>
  <xacro:macro name="base_cyl" params="r x y">
    <visual>
      <origin xyz="${x} ${y} ${0.01}" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="${r}" length="0.002"/>
      </geometry>
      <material name="Rust"/>
    </visual>
    <visual>
      <origin xyz="${x} ${y} ${base_height+0.01}" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="${r}" length="0.002"/>
      </geometry>
      <material name="Rust"/>
    </visual>
  </xacro:macro>
  <xacro:macro name="circuit_box" params="l w h x y">
    <visual>
      <origin xyz="${x} ${y} ${base_height+h/2+0.01+0.004}" rpy="0 0 0"/>
      <geometry>
        <box size="${l} ${w} ${h}"/>
      </geometry>
      <material name="Green"/>
    </visual>
  </xacro:macro>

  <link name="base_link">
    <xacro:base_box l="0.03" w="${base_width}" x="0.135" y="0" />
    <xacro:base_box l="0.08" w="${base_width-0.08}" x="0.08" y="0" />
    <xacro:base_box l="0.09" w="${base_width}" x="-0.005" y="0" />
    <xacro:base_box l="0.10" w="0.08" x="-0.10" y="0" />
    <xacro:base_cyl r="0.10" x="-0.05" y="0.04" />
    <xacro:base_cyl r="0.10" x="-0.05" y="-0.04" />
  </link>

  <link name="circuits">
    <xacro:circuit_box l="0.10" w="0.06" h="0.015" x="0.08" y="0.06" />
    <xacro:circuit_box l="0.10" w="0.08" h="0.05" x="0.08" y="-0.05" />
  </link>

  <joint name="circuits_joint" type="fixed">
    <parent link="base_link"/>
    <child link="circuits"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <link name="base_footprint">
    <visual>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
      <geometry>
        <box size="${total_length} ${total_width} 0.00"/>
      </geometry>

    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0.0 0.0 ${total_height/2}"/>
      <geometry>
        <box size="${total_length} ${total_width} ${total_height}"/>
      </geometry>
    </collision>
    <xacro:box_inertia m="5000" w="${base_width}" d="${base_length}" h="${base_height}"/>
  </link>

  <link name="back_wheel">
    <visual>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <material name="Orange">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="back_wheel_joint" type="fixed">
    <parent link="base_link"/>
    <child link="back_wheel"/>
    <origin xyz="-0.11 0.0 0.02" rpy="0 0 0"/>
  </joint>

  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_footprint"/>
    <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
  </joint>

  <!-- Wheels -->
  <xacro:macro name="wheel" params="prefix x_reflect y_reflect">
    <link name="${prefix}_link">
      <visual>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <geometry>
            <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
        <material name="Blue"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/> 
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
      </collision>

      <xacro:cylinder_inertia m="0.2" r="${wheel_radius}" h="${wheel_width}"/>
    </link>

    <joint name="${prefix}_joint" type="fixed">
      <parent link="base_link"/>
      <child link="${prefix}_link"/>
      <origin xyz="${x_reflect*wheel_xoff} ${y_reflect*(base_width/2-wheel_width/2)} ${wheel_radius}" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
    </joint>
  </xacro:macro>

  <xacro:wheel prefix="drivewhl_l" x_reflect="1" y_reflect="1" />
  <xacro:wheel prefix="drivewhl_r" x_reflect="1" y_reflect="-1" />

 <link name="laser">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.125"/>
      <inertia ixx="0.001"  ixy="0"  ixz="0" iyy="0.001" iyz="0" izz="0.001" />
    </inertial>

    <collision>
      <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
      <geometry>
         <cylinder radius="0.0508" length="0.025"/>
      </geometry>
    </collision>

    <visual>
      <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
      <geometry>
         <cylinder radius="0.0508" length="0.025"/>
      </geometry>
      <material name="Plastic"/>
    </visual>
  </link>
    
  <joint name="laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="laser"/>
    <origin xyz="-0.067 0.0 0.134" rpy="0 0 3.1"/> -->
  </joint>
    
   <link name="camera_link">
    <visual>
      <origin rpy="0.0 0.0 0.0" xyz="0.0 -0.0475 0.0"/>
      <geometry>
         <box size="0.03 0.12 0.03"/>
      </geometry>
      <material name="Aluminum"/>
    </visual>
  </link>
    
  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.053 0.0475 0.19" rpy="0.0 0.0 0.0"/>
  </joint>

</robot>