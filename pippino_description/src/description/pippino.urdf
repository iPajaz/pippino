<?xml version="1.0"?>
<robot name="pippino" xmlns:xacro="http://ros.org/wiki/xacro">


	<xacro:property name="base_width" value="0.28"/>
	<xacro:property name="base_length" value="0.30"/>
	<xacro:property name="base_height" value="0.11"/>

  <xacro:property name="total_width" value="0.28"/>
  <xacro:property name="total_length" value="0.30"/>
  <xacro:property name="total_height" value="0.20"/>
  

	<xacro:property name="wheel_radius" value="0.034"/>
	<xacro:property name="wheel_width" value="0.028"/>
	<xacro:property name="wheel_ygap" value="0.01"/>
	<xacro:property name="wheel_zoff" value="-0.034"/>
	<xacro:property name="wheel_xoff" value="0.0"/>
 <!-- Define some commonly used intertial properties  -->
  <xacro:macro name="box_inertia" params="m w h d">
    <inertial>
      <origin xyz="0 0 0" rpy="${pi/2} 0 ${pi/2}"/>      
      <mass value="${m}"/>
      <inertia ixx="${(m/12) * (h*h + d*d)}" ixy="0.0" ixz="0.0" iyy="${(m/12) * (w*w + d*d)}" iyz="0.0" izz="${(m/12) * (w*w + h*h)}"/>
    </inertial>
  </xacro:macro>

  <xacro:macro name="cylinder_inertia" params="m r h">
    <inertial>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0" />      
      <mass value="${m}"/>
      <inertia ixx="${(m/12) * (3*r*r + h*h)}" ixy = "0" ixz = "0" iyy="${(m/12) * (3*r*r + h*h)}" iyz = "0" izz="${(m/2) * (r*r)}"/> 
    </inertial>
  </xacro:macro>

  <xacro:macro name="sphere_inertia" params="m r">
    <inertial>
      <mass value="${m}"/>
      <inertia ixx="${(2/5) * m * (r*r)}" ixy="0.0" ixz="0.0" iyy="${(2/5) * m * (r*r)}" iyz="0.0" izz="${(2/5) * m * (r*r)}"/>
    </inertial>
  </xacro:macro>

	<link name="base_link">
		<visual>
			<origin rpy="0 0 0" xyz="${0.02-base_length/2} 0.0 ${base_height/2+0.02}"/>
			<geometry>
				<box size="${base_length} ${base_width-2*(wheel_width+wheel_ygap)} ${base_height}"/>
			</geometry>
			<material name="green">
   			<color rgba="0.0 0.5 0.0 1.0"/>
 			</material>
		</visual>


  <xacro:box_inertia m="40" w="${base_width}" d="${base_length}" h="${base_height}"/>
	</link>

  <link name="base_footprint">
  	<xacro:box_inertia m="0" w="0" d="0" h="0"/>
    <visual>
      <origin rpy="0 0 0" xyz="${0.02-0.3/2} 0.0 0.0"/>
      <geometry>
        <box size="${total_length} ${total_width} 0.00"/>
      </geometry>
      <material name="blue">
        <color rgba="0.0 0.0 0.4 0.1"/>
      </material>
    </visual>

    <collision>
      <origin rpy="0 0 0" xyz="${0.01-total_length/2+wheel_radius/2} 0.0 ${total_height/2}"/>
      <geometry>
        <box size="${total_length+wheel_radius-0.02} ${total_width} ${total_height}"/>
      </geometry>
    </collision>

  </link>

  <link name="back_wheel">
    <visual>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <material name="Gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="back_wheel_joint" type="fixed">
    <parent link="base_link"/>
    <child link="back_wheel"/>
    <origin xyz="-0.23 0.0 0.02" rpy="0 0 0"/>
  </joint>

  <joint name="base_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_footprint"/>
    <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
  </joint>

  <!-- Wheels -->
  <xacro:macro name="wheel" params="prefix x_reflect y_reflect">
    <link name="${prefix}_link">
      <visual>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <geometry>
            <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
        <material name="Gray">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/> 
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
      </collision>

      <xacro:cylinder_inertia m="0.5" r="${wheel_radius}" h="${wheel_width}"/>
    </link>

    <joint name="${prefix}_joint" type="fixed">
      <parent link="base_link"/>
      <child link="${prefix}_link"/>
      <origin xyz="${x_reflect*wheel_xoff} ${y_reflect*(base_width/2-wheel_width/2)} ${-wheel_zoff}" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
    </joint>
  </xacro:macro>

  <xacro:wheel prefix="drivewhl_l" x_reflect="-1" y_reflect="1" />
  <xacro:wheel prefix="drivewhl_r" x_reflect="-1" y_reflect="-1" />

 <link name="laser">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.125"/>
      <inertia ixx="0.001"  ixy="0"  ixz="0" iyy="0.001" iyz="0" izz="0.001" />
    </inertial>

    <collision>
      <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
      <geometry>
         <cylinder radius="0.0508" length="0.025"/>
      </geometry>
    </collision>

    <visual>
      <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
      <geometry>
         <cylinder radius="0.0508" length="0.025"/>
      </geometry>
    </visual>
  </link>
    
  <joint name="laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="laser"/>
    <origin xyz="-0.155 0.0 0.18" rpy="0 0 3.14159265"/>
  </joint>
    
 <link name="camera_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.125"/>
      <inertia ixx="0.001"  ixy="0"  ixz="0" iyy="0.001" iyz="0" izz="0.001" />
    </inertial>

    <collision>
      <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
      <geometry>
         <cylinder radius="0.0508" length="0.025"/>
      </geometry>
    </collision>

    <visual>
      <origin rpy="0.0 0.0 0.0" xyz="0.0 -0.13 0.0"/>
      <geometry>
         <box size="0.03 0.12 0.03"/>
      </geometry>
    </visual>
  </link>
    
  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="-0.10 0.13 0.22" rpy="0.0 0.0 0.0"/>
  </joint>
